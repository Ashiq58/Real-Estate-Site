@model IEnumerable<Mvc_RealeState.Models.PropertyImage>

@{
    ViewBag.Title = "Index";
}

<h2>Property Image</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            Property Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
     
        <td>          
            <img src="../Upload/PropertyImage/@(item.PropertyId.ToString()+ "_"+ item.Name)" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Property.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
